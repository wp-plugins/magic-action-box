/**
 * Basic
 */
.clear{ clear: both; }

/**
 * Global
 */
.magic-action-box{
	clear: both;
	color: #282828;
	font-size: 14px;
	margin: 20px 0;
}

.mab-wrap{ padding: 15px; }
	
/*********************************
 * Default Styles
 *********************************/
.mab-default{
	background: #f5f5f5;
	border: 3px solid #ccc;
}

.mab-aside{
	position: relative;
	z-index: 8;
}

.mab-aside-right .mab-aside{
	float: right;
	margin-left: 15px;
}

.mab-aside-left .mab-aside{
	float: left;
	margin-right: 15px;
}

.mab-aside-top .mab-aside{
	display: block;
	margin-bottom: 10px;
	text-align: center;
	width: 100%;
}


/* Content */
.mab-content{
	position: relative;
	z-index: 10;
}

.magic-action-box .mab-heading{
	clear: none;
	font-size: 160%;
	font-weight: bold;
	letter-spacing: 0;
	line-height: 1.4;
	margin: 0 0 7px;
	text-transform: none;
}

.magic-action-box .mab-subheading{
	clear: none;
	font-size: 120%;
	font-weight: bold;
	line-height: 1.4;
	margin: 0 0 10px;
}

.magic-action-box .mab-main-copy{
}

/* Form */
.magic-action-box form{
	margin: 10px 0;
	overflow: hidden;
}

.magic-action-box form .mab-field{
	float: left;
	margin: 0 10px 10px 0;
	width: 47%;
}

.magic-action-box form .mab-field label{
	display: block;
	font-size: 90%;
}

.magic-action-box form .mab-field input, .magic-action-box form .mab-field textarea{
	background: #fff;
	border: 1px solid #999;
	border-radius: 2px;
	box-shadow: none;
	color: #555;
	float: left;
	margin: 0;
	padding: 3px;
	width: 95%;
}

.magic-action-box form .mab-field input:focus, .magic-action-box form .mab-field textarea:focus{
	border-color: #888;
	box-shadow: 0 0 2px #c7c7c7;
	color: #444;
}

.magic-action-box form input[type="submit"]{
	background: #333;
	border: 1px solid #222;
	border-radius: 3px;
	clear: both;
	color: #fff;
	cursor: pointer;
	margin: 0;
	padding: 3px 13px;
	text-shadow: -1px -1px 0 #111;
}

.magic-action-box form input[type="submit"]:hover, .magic-action-box form input[type="submit"]:focus{
	background: #555;
	border-color: #333;
	text-shadow: -1px -1px 0 #272727;
	
}

/***************************
	YELLOW
***************************/
.mab-yellow{
	background: #FFFBDC;
	border-color: #FFE794;
}
